{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/summarize",
      "dest": "summarize.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}
